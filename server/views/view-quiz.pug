//- the view for a user's quiz

extends view-layout

include _includes/show_quiz

append variables
  - var bodyClass = "quiz"
  - var title = "The Quizzical Challenge!"

block content
  .container.restart
    a(href="/restart") Restart quiz
  +showQuiz
    //- block for last question
    form.answer(action="/", method="post")
      input(type="number", name="answer")
      button(type="submit", class="btn btn-primary btn-sm") Submit
