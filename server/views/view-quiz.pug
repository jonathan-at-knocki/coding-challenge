//- the view for a user's quiz

extends view-layout

block variables
  - var bodyClass = "quiz"

block content
  h1 Multiplication quiz
  //- place for errors
  h3#error= errMsg
  a(href="/restart") Restart quiz
  +showQuiz
    //- block for last question
    form.answer(action="/", method="post")
      input(type="number", name="answer")
      button(type="submit") Submit
